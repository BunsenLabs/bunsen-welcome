INSTALL_PAE_TITLE=$"PAE Kernel"

if grep -wq pae /proc/cpuinfo
then
    setupPage "$INSTALL_PAE_TITLE" $"Your processor does not support PAE."
elif dpkg -l | grep -Eq '^ *ii +linux-image-[^ ]*(amd64|pae) '
then
    setupPage "$INSTALL_PAE_TITLE" $"You already have a PAE enabled kernel installed"
else
    installPage "$INSTALL_PAE_TITLE" \
$"Your processor supports PAE, but you do not have a PAE enabled kernel installed. Would you like to install one now?" \
'linux-image-686-pae'
fi
